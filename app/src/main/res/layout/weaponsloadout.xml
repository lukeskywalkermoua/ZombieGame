<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:textColor="#FFFFFF"
        android:id="@+id/textView4"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:textColor="#000000"
        android:id="@+id/weapon_button1"
        android:textSize="15sp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="226dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/weapon_button3" />

    <Button
        android:textColor="#000000"
        android:id="@+id/weapon_button2"
        android:textSize="15sp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/weapon_button1"
        app:layout_constraintTop_toBottomOf="@+id/weapon_button1" />

    <Button
        android:textColor="#000000"
        android:id="@+id/weapon_button3"
        android:textSize="15sp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        app:layout_constraintStart_toStartOf="@+id/weapon_button4"
        app:layout_constraintTop_toBottomOf="@+id/weapon_button2" />

    <Button
        android:textColor="#000000"
        android:id="@+id/weapon_button4"
        android:textSize="15sp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>